<h2 class="fs-2 p-5"><%= @task.title %></h2>
<p class="ps-5"><%= @task.details %></p>

<% if @task.completed == false %>
  <%= "This task is not completed yet"%>
<% else %>
  <%= "This task is completed" %>
<%end%>

<p class="ps-5"><%= link_to "Edit this task", edit_task_path(@task) %></p>

<div class="border-top ps-5">
<p><%= link_to "Back to list", tasks_path %></p>
</div>
