<h2 class="fs-2 p-5">Edit task</h2>

<div class="ps-5">
<%= form_with model: @task do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>
  <%= f.label :details %>
  <%= f.text_field :details %>
  <p><%= f.check_box :completed %>
  <%= f.label :completed %></p>
  <p><%= f.submit %></p>
<% end %>
</div>

<div class="border-top ps-5">
<p><%= link_to "Back to list", task_path %></p>
</div>
